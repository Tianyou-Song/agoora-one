{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:all",
        "plugin:react/all",
        "plugin:@typescript-eslint/all",
        "plugin:jest/all",
        "airbnb",
        "airbnb-typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "project": "tsconfig.json",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "jest",
        "react"
    ],
    "rules": {
        "@typescript-eslint/indent": [
            "error",
            "tab"
        ],
        "@typescript-eslint/prefer-readonly-parameter-types": "off",
        "@typescript-eslint/quotes": [
            "error",
            "double"
        ],
        "array-callback-return": [
            "error",
            {
                "checkForEach": true
            }
        ],
        "arrow-body-style": [
            "error",
            "always"
        ],
        "consistent-return": [
            "error",
            {
                "treatUndefinedAsUnspecified": true
            }
        ],
        "dot-location": [
            "error",
            "property"
        ],
        "grouped-accessor-pairs": [
            "error",
            "getBeforeSet"
        ],
        "indent": [
            "error",
            "tab"
        ],
        "key-spacing": [
            "error",
            {
                "align": {
                    "beforeColon": true,
                    "mode": "minimum",
                    "on": "colon"
                },
                "multiLine": {
                    "beforeColon": true
                },
                "singleLine": {
                    "beforeColon": true
                }
            }
        ],
        "max-lines-per-function": "off",
        "max-statements-per-line": [
            "error",
            {
                "max": 1
            }
        ],
        "no-extra-boolean-cast": [
            "error",
            {
                "enforceForLogicalOperands": true
            }
        ],
        "no-implicit-globals": [
            "error",
            {
                "lexicalBindings": true
            }
        ],
        "no-inner-declarations": [
            "error",
            "both"
        ],
        "no-magic-numbers": [
            "error",
            {
                "detectObjects": true,
                "enforceConst": true
            }
        ],
        "no-multi-spaces": [
            "error",
            {
                "exceptions": {
                    "ImportDeclaration": true,
                    "VariableDeclarator": true
                },
                "ignoreEOLComments": true
            }
        ],
        "no-tabs": [
            "error",
            {
                "allowIndentationTabs": true
            }
        ],
        "no-unsafe-negation": [
            "error",
            {
                "enforceForOrderingRelations": true
            }
        ],
        "no-use-before-define": "off",
        "quotes": [
            "error",
            "double"
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".tsx"
                ]
            }
        ],
        "react/jsx-indent": [
            "error",
            "tab"
        ],
        "react/jsx-indent-props": [
            "error",
            "tab"
        ],
        "sort-keys": [
            "error",
            "asc",
            {
                "natural": true
            }
        ],
        "use-isnan": [
            "error",
            {
                "enforceForIndexOf": true
            }
        ]
    }
}